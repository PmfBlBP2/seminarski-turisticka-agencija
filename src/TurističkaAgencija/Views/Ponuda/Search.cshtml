@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@model TurističkaAgencija.Models.Home

@{
    ViewData["Title"] = "Search";
}
<!-- Home -->

<div class="home">
    <!-- Home Slider -->
    <div class="home_slider_container">
        <div class="owl-carousel owl-theme home_slider">
            <!-- Slider Item -->
            <div class="owl-item home_slider_item">
                <div class="home_slider_background" style="background-image:url(Assets/images/home_slider.jpg)"></div>

                <div class="home_slider_content text-center">
                    <div class="home_slider_content_inner" data-animation-in="flipInX" data-animation-out="animate-out fadeOut">
                        <h1>discover</h1>
                        <h1>the world</h1>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

<!-- Search -->

<div class="search">
    <!-- Search Contents -->
    <div class="container fill_height">
        <div class="row fill_height">
            <div class="col fill_height">
                <!-- Search Tabs -->
                <div class="search_tabs_container">
                    <div class="search_tabs d-flex flex-lg-row flex-column align-items-lg-center align-items-start justify-content-lg-between justify-content-start">
                        <div class="search_tab active d-flex flex-row align-items-center justify-content-lg-center justify-content-start">
                            <img src="~/Assets/images/search.png" alt="">
                            <span>Pretraga</span>
                        </div>
                    </div>
                </div>
                <!-- Search Panel -->
                <div class="search_panel active">
                    <form asp-action="Search" id="search_form_1" class="search_panel_content d-flex flex-lg-row flex-column align-items-lg-center align-items-start justify-content-lg-between justify-content-start">
                        <div class="search_item">
                            <div>Destinacija</div>
                            <input asp-for="@Model.Pretraga.Destinacija" class="destination search_input" placeholder="Npr. Banja Luka">
                        </div>
                        <div class="search_item">
                            <div>Datum od</div>
                            <input asp-for="@Model.Pretraga.DatumOd" class="check_in search_input" value="@ViewBag.minDatum">
                        </div>
                        <div class="search_item">
                            <div>Datum do</div>
                            <input asp-for="@Model.Pretraga.DatumDo" class="check_out search_input" value="@ViewBag.maxDatum">
                        </div>
                        <div class="search_item">
                            <div>Cijena od</div>
                            <input asp-for="@Model.Pretraga.CijenaOd" class="check_out search_input" placeholder="Npr. @ViewBag.minCijena">
                        </div>
                        <div class="search_item">
                            <div>Cijena do</div>
                            <input asp-for="@Model.Pretraga.CijenaDo" class="check_out search_input" placeholder="Npr. @ViewBag.maxCijena">
                        </div>

                        <button type="submit" class="button search_button" style="margin-bottom:30px;">Pretraži<span></span><span></span><span></span></button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
@if (Model.Ponuda != null)
{
    <h1>Ponuda putovanja <a class="btn btn-outline-info" asp-controller="Ponuda" asp-action="Create">Dodaj ponudu</a></h1>
    <hr />

    @foreach (var item in Model.Ponuda)
    {
        <div class="container">
            <div class="row">
                <div class="col-5">
                    <h2 class="text-primary ">@item.Naziv</h2>
                    <img class="popImg img-thumbnail img-hover" width="430"
                         src="@Html.DisplayFor(modelItem => item.Destinacija.Slika)"
                         alt="@Html.DisplayFor(modelItem => item.Destinacija.Grad)" />
                    <p></p>
                    <a class="btn btn-outline-primary btn-lg btn-block"
                       href="@Url.Action("Create", "Rezervacija", new { ponudaId = item.Id })">Rezerviši</a>
                    <p></p>
                    <a class="btn btn-outline-success btn-sm"
                       href="@Url.Action("Index", "Rezervacija", new { ponudaId = item.Id })">Pregled rezervacija</a>

                    @if (SignInManager.IsSignedIn(User))
                    {
                        <a class="btn btn-sm btn-outline-danger" asp-action="Edit" asp-route-id="@item.Id">Izmijeni ponudu</a>
                    }

                </div>
                <div class="col-7">
                    <div class="row">
                        <div class="col">
                            <p><strong>Ponuda kreirana: </strong>@item.DatumKreiranja.ToShortDateString()</p>
                            <p><strong>Datum polaska: </strong>@item.Pocetak.ToShortDateString()</p>
                            <p><strong>Datum povratka: </strong>@item.Kraj.ToShortDateString()</p>
                            <p><strong>Broj slobodnih mijesta: </strong>@item.BrojMijesta</p>
                            <hr style="width: 100px; margin-left: 0px;" />
                            <p><strong>Prevoz:</strong></p>
                            <div class="container">
                                <p><strong>Tip: </strong>@item.Prevoz.TipPrevoza.Naziv</p>
                                <p><strong>Opis: </strong>@item.Prevoz.Opis</p>
                                <p><strong>Prevoznik: </strong>@item.Prevoz.Kompanija.Naziv, @item.Prevoz.Kompanija.Grad</p>
                            </div>
                            <hr style="width: 100px; margin-left: 0px;" />
                            <h4><strong>Cijena: </strong>@item.Cijena KM</h4>
                        </div>
                        <div class="col">
                            <p><strong>Destinacija:</strong></p>
                            <div class="container">
                                <p><strong>Grad: </strong>@item.Destinacija.Grad</p>
                                <p><strong>Opis: </strong>@item.Destinacija.Opis</p>
                            </div>
                            <hr style="width: 100px; margin-left: 0px;" />
                            <p><strong>Smjestaj:</strong></p>
                            <div class="container">
                                <p><strong>Naziv: </strong>@item.Smjestaj.Naziv</p>
                                <p><strong>Adresa: </strong>@item.Smjestaj.Adresa</p>
                                <p><strong>Opis: </strong>@item.Smjestaj.Opis</p>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
        <hr />
    }
}
else
{
    <div class="container">
        <h1>Nema rezultata pretrage, pokušajte ponovo!</h1>
    </div>
}

<div class="modal fade" id="imagemodal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalCenterTitle"></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <img src="" class="imagepreview" style="width: 100%;">
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/Assets/js/offers_custom.js"></script>
    <script src="~/Assets/plugins/parallax-js-master/parallax.min.js"></script>
    <script src="~/Assets/plugins/Isotope/isotope.pkgd.min.js"></script>
    <script>
        $(function () {
            $('.popImg').on('click', function () {
                $('.imagepreview').attr('src', $(this).attr('src'));
                $('#exampleModalCenterTitle').text($(this).attr('alt'));
                $('#imagemodal').modal('show');
            });
        });
    </script>
    <style>
        .img-hover {
            cursor: pointer;
        }
    </style>
}

