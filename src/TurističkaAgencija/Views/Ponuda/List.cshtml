@model IEnumerable<TurističkaAgencija.Models.Ponuda>

@{
    ViewData["Title"] = "List";
}


<div class="home">
    <div class="home_background parallax-window" data-parallax="scroll" data-image-src="/Assets/images/contact_background.jpg"></div>
    <div class="home_content">
        <div class="home_title">Pregled ponuda</div>
        <h1 style="text-align: center; font-weight: 700;" class="text-uppercase text-light">@ViewBag.PonudaNaziv</h1>
    </div>
</div>

<div class="container" style="margin-top: 80px; margin-bottom: 80px;">
    <div class="row">
        <div class="col">
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Naziv)
                        </th>
                        <th>
                            Datum kreiranja
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Pocetak)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Kraj)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Cijena)
                        </th>
                        <th>
                            Broj mijesta
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Destinacija)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Prevoz)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Smjestaj)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Naziv)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DatumKreiranja)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Pocetak)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Kraj)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Cijena)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.BrojMijesta)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Destinacija.Grad)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Prevoz.Id)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Smjestaj.Adresa)
                            </td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.Id">Izmijeni</a> |
                                @Html.ActionLink(
                                    "Obriši",
                                    "Remove",
                                    "Ponuda",
                                    new { id = item.Id },
                                    new { onclick = "return confirm('Da li sigurni da želite da obrišete?');" })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <div class="button home_slider_button">
                <div class="button_bcg"></div>
                <a href="@Url.Action("Create", "Ponuda")">Dodaj novu ponudu<span></span><span></span><span></span></a>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script src="~/Assets/plugins/parallax-js-master/parallax.min.js"></script>
    <script src="~/Assets/js/contact_custom.js"></script>

}