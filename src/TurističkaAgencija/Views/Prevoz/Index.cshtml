@model IEnumerable<TurističkaAgencija.Models.Prevoz>

@{
    ViewData["Title"] = "Prevoz";
}

<div class="home">
    <div class="home_background parallax-window" data-parallax="scroll" data-image-src="/Assets/images/contact_background.jpg"></div>
    <div class="home_content">
        <div class="home_title">Pregled prevoza</div>
        <h1 style="text-align: center; font-weight: 700;" class="text-uppercase text-light">@ViewBag.PonudaNaziv</h1>
    </div>
</div>

<div class="container" style="margin-top: 80px; margin-bottom: 80px;">
    <div class="row">
        <div class="col">
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            Tip prevoza
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Kompanija)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Opis)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.TipPrevoza.Naziv)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Kompanija.Naziv)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Opis)
                            </td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.Id">Izmijeni</a> |
                                @Html.ActionLink(
                                    "Obriši",
                                    "Remove",
                                    "Prevoz",
                                    new { id = item.Id },
                                    new { onclick = "return confirm('Da li sigurni da želite da obrišete?');" })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <div class="button home_slider_button">
                <div class="button_bcg"></div>
                <a href="@Url.Action("Create", "Prevoz")">Dodaj novi prevoz<span></span><span></span><span></span></a>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script src="~/Assets/plugins/parallax-js-master/parallax.min.js"></script>
    <script src="~/Assets/js/contact_custom.js"></script>

}