@model IEnumerable<TurističkaAgencija.Models.Destinacija>

@{
    ViewData["Title"] = "Index";
}

<h1>
    Destinacije
    <a class="btn btn-outline-info" asp-action="Create">Dodaj novu destinaciju</a>
</h1>
<hr />

@foreach (var item in Model)
{
    <div class="container">
        <div class="row">
            <div class="col-5">
                <h2 class="text-primary ">@item.Grad</h2>
                <img class="popImg img-thumbnail img-hover" width="430"
                     src="@Html.DisplayFor(modelItem => item.Slika)"
                     alt="@Html.DisplayFor(modelItem => item.Grad)" />
                <p></p>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </div>
            <div class="col-7">
                <div class="row">
                    <div class="col">
                        <p><strong>Grad: </strong>@item.Grad</p>
                        <p><strong>Država: </strong>@item.Drzava.Naziv</p>
                        <p><strong>Opis: </strong>@item.Opis</p>
                    </div>
                </div>

            </div>
        </div>
    </div>
    <hr />
}

<div class="modal fade" id="imagemodal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalCenterTitle"></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <img src="" class="imagepreview" style="width: 100%;">
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
    $(function () {
        $('.popImg').on('click', function () {
            $('.imagepreview').attr('src', $(this).attr('src'));
            $('#exampleModalCenterTitle').text($(this).attr('alt'));
            $('#imagemodal').modal('show');
        });
    });
    </script>
    <style>
        .img-hover {
            cursor: pointer;
        }
    </style>
}