@model IEnumerable<TurističkaAgencija.Models.Korisnik>

@{
    ViewData["Title"] = "Korisnik";
}

<div class="home">
    <div class="home_background parallax-window" data-parallax="scroll" data-image-src="/Assets/images/contact_background.jpg"></div>
    <div class="home_content">
        <div class="home_title">Pregled korisnika</div>
        <h1 style="text-align: center; font-weight: 700;" class="text-uppercase text-light">@ViewBag.PonudaNaziv</h1>
    </div>
</div>

<div class="container" style="margin-top: 80px; margin-bottom: 80px;">
    <div class="row">
        <div class="col">
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Ime)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Prezime)
                        </th>
                        <th>
                            Datum rođenja
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Email)
                        </th>
                        <th>
                            Broj telefona
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Ime)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Prezime)
                            </td>
                            @{
                                var date = item.DatumRodjenja.ToShortDateString();
                                <td>
                                    @date
                                </td>
                            }
                            <td>
                                @Html.DisplayFor(modelItem => item.Email)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.BrojTelefona)
                            </td>

                            <td>
                                <a asp-action="Edit" asp-route-id="@item.Id">Izmijeni</a> |
                                @Html.ActionLink(
                                    "Obriši",
                                    "Remove",
                                    "Korisnik",
                                    new { id = item.Id },
                                    new { onclick = "return confirm('Da li sigurni da želite da obrišete?');" })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <div class="button home_slider_button">
                <div class="button_bcg"></div>
                <a href="@Url.Action("Create", "Korisnik")">Dodaj novog korisnika<span></span><span></span><span></span></a>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script src="~/Assets/plugins/parallax-js-master/parallax.min.js"></script>
    <script src="~/Assets/js/contact_custom.js"></script>

}
