        </div>
    </div>
    <div class="col-md-6">
        <div class="form-group">
            <label asp-for="Korisnik.Prezime" class="control-label" style="color: white;"></label>
            <input asp-for="Korisnik.Prezime" class="form-control" />
            <span asp-validation-for="Korisnik.Prezime" class="text-danger"></span>
        </div>
    </div>
</div>
<div class="form-group">
    <label asp-for="Korisnik.Email" class="control-label" style="color: white;"></label>
    <input asp-for="Korisnik.Email" class="form-control" />
    <span asp-validation-for="Korisnik.Email" class="text-danger"></span>
</div>
<div class="row">
    <div class="col-md-6">
        <div class="form-group">
            <label asp-for="Korisnik.DatumRodjenja" class="control-label" style="color: white;">Datum rođenja</label>
            <input asp-for="Korisnik.DatumRodjenja" class="form-control" />
            <span asp-validation-for="Korisnik.DatumRodjenja" class="text-danger"></span>
        </div>
    </div>
    <div class="col-md-6">
        <div class="form-group">
            <label asp-for="Korisnik.BrojTelefona" class="control-label" style="color: white;">Broj telefona</label>
            <input asp-for="Korisnik.BrojTelefona" class="form-control" />
            <span asp-validation-for="Korisnik.BrojTelefona" class="text-danger"></span>
        </div>
    </div>
</div>
